@model AppdevPhong.ViewModels.CourseVm

@{
    Layout = "_Layout";
    var title = Model.Course.Id != 0 ? "Update Course" : "Create Course";
}

<h1>@title</h1>
<form method="post">
    <input asp-for="Course.Id" class="form-control" hidden>
    <div class="mb-3">
        <label asp-for="Course.Name" class="form-label"></label>
        <input asp-for="Course.Name" class="form-control">
        <span asp-validation-for="Course.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Course.Description" class="form-label"></label>
        <input asp-for="Course.Description" class="form-control">
        <span asp-validation-for="Course.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Course.CategoryId" class="form-label"></label>
        @Html.DropDownListFor(x => x.Course.CategoryId, Model.CategoryList, "--plaese select Categor", new { @class = "form-control" })
        <span asp-validation-for="Course.CategoryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>