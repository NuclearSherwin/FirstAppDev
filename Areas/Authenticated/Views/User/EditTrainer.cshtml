@using AppdevPhong.Utility
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Trainer

<h1>Edit Trainee</h1>
<form method="post">
    <input asp-for="Id" class="form-control" hidden>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="WorkingPlace" class="form-label"></label>
        <input asp-for="WorkingPlace" class="form-control">
        <span asp-validation-for="WorkingPlace" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<TypeOfTrainer>()" class="form-control">
            <option selected="selected" value="">Please Select</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>